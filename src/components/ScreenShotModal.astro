---
const { isOpen, images, closeModal } = Astro.props;
---

{isOpen && (
  <div class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg overflow-hidden max-w-4xl w-full relative">
      <button
        class="absolute top-2 right-2 text-gray-500 hover:text-black text-2xl"
        onclick={closeModal}
      >
        &times;
      </button>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 p-6">
        {images.map((src) => (
          <img src={src} alt="Screenshot" class="rounded border" />
        ))}
      </div>
    </div>
  </div>
)}